{
  "name": "docsify-helper",
  "version": "1.0.0",
  "description": "Docsify 文档自动化工具 - 自动生成侧边栏和部署",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-portable": "electron-builder --win --x64",
    "dist": "npm run build-portable",
    "test": "node src/cli.js --help"
  },
  "keywords": [
    "docsify",
    "documentation",
    "sidebar",
    "deployment",
    "electron"
  ],
  "author": "Docsify Helper",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "yaml": "^2.3.4",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "path": "^0.12.7",
    "child_process": "^1.0.2"
  },
  "build": {
    "appId": "com.docsify.helper",
    "productName": "Docsify Helper",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "config.yaml"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icon.ico"
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.${ext}"
    },
    "linux": {
      "target": ["AppImage", "deb"]
    },
    "mac": {
      "target": "dmg"
    }
  },
  "bin": {
    "docsify-helper": "src/cli.js"
  }
}
